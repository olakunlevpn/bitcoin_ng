{
    "name": "olakunlevpn/bitcoin_ng",
    "description": "A lightweight bitcoin to Nigerian (NGN) converter and vice versa based on current exchange rates from your chosen provider: Coinbase, Coindesk, Bitpay and etc.",
    "type": "library",
    "keywords": [
            "naira","bitcoin", "currency", "converter", "coinbase", "coindesk", "bitpay", "cryptocurrency"
        ],
    "license": "MIT",
    "authors": [
        {
            "name": "olakunlevpn",
            "email": "olakunlevpn@live.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "guzzlehttp/guzzle": "^6.3",
        "illuminate/cache": "^5.5",
        "illuminate/filesystem": "^5.5",
        "composer/composer": "^1.5"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7",
        "mockery/mockery": "0.9.*"
    },
    "autoload": {
        "psr-4": {
            "olakunlevpn\\BitcoinNairaConverter\\": "src/"
        },
        "files": [
            "src/Util/currency_code_checker_helper.php",
            "src/Util/currency_formatter_helper.php",
            "src/Util/converter_helperNG.php",
            "src/Util/path_helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "prefer-stable" : true
}
